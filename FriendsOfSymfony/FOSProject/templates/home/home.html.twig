{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href='assets/css/home.css' rel="stylesheet" /> 
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
<h1>Home Page</h1>
<section class="chronique_section">
<h2>Voir votre horoscope</h2>
    {% for chronique in chroniques %}
    <div class="chronique_container">
        <h3>{{chronique.SigneAstro}}</h3>
        <h4>Votre Couple</h4>
        <p>{{chronique.Couple}}</p>
        <h4>Votre Vie</h4>
        <p>{{chronique.Vie}}</p>
        <h4>Conseils Amoureux</h4>
        <p>{{chronique.Conseils}}</p>
<a href="{{ path("horoscope_show", {id: chronique.id}) }}">Editer l'horoscope</a>
    </div>
    {% endfor %}
</section>
{% endblock %}